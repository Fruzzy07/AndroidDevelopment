<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemActivity">

    <Button
        android:id="@+id/back_button"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"
        android:text='^' />

    <ImageView
        android:id="@+id/item_list_image_one"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/bavaryan"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_list_title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_list_image_one"
        app:layout_constraintTop_toTopOf="@+id/item_list_image_one" />

    <TextView
        android:id="@+id/item_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/item_list_title_one"
        app:layout_constraintStart_toEndOf="@+id/item_list_image_one"
        app:layout_constraintTop_toBottomOf="@+id/item_list_title_one" />

    <Button
        android:id="@+id/button_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В корзину за "
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#3EFFC7B6"
        android:textColor="#C3FF6D00"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@+id/item_list_text"
        app:layout_constraintTop_toBottomOf="@+id/item_list_text" />

</LinearLayout>