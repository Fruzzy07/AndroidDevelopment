<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/bavaryan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_list_image"
        app:layout_constraintTop_toTopOf="@+id/item_list_image" />

    <TextView
        android:id="@+id/item_list_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/item_list_title"
        app:layout_constraintStart_toEndOf="@+id/item_list_image"
        app:layout_constraintTop_toBottomOf="@+id/item_list_title" />

    <Button
        android:id="@+id/item_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="12dp"
        android:backgroundTint="#3EFFC7B6"
        android:textColor="#C3FF6D00"
        app:layout_constraintStart_toStartOf="@+id/item_list_description"
        app:layout_constraintTop_toBottomOf="@+id/item_list_description" />

</androidx.constraintlayout.widget.ConstraintLayout>